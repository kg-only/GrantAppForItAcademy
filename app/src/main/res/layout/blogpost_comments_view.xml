<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:backgroundTint="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/postInfo"
            android:text="postinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:text="text"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postInfo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInfo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="user"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/userId"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/userFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImage"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="userFirstName"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/userSecondName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userFirstName"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="userSecondName"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/postedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userSecondName"
            android:layout_marginStart="20dp"
            android:text="posted"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>
</RelativeLayout>

