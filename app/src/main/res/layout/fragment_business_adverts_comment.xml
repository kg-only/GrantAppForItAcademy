<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout class="androidx.appcompat.app.AlertController$RecycleListView" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.business_adverts.business_adverts_comment.BusinessAdvertsCommentFragment">

    <TextView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Коментарии"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comments"
        android:orientation="vertical"
        android:layout_above="@+id/addComment"
        android:padding="10dp"
        tools:listitem="@layout/business_adverts_comments_view" />

    <Button
        android:id="@+id/addComment"
        android:text="Добавить комментарий"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
